<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/bookListFragment">

    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.example.harrypotter.presentation.BookListFragment"
        tools:layout="@layout/fragment_book_list"
        android:label="BookListFragment" >
        <action
            android:id="@+id/action_bookListFragment_to_bookDetailsFragment"
            app:destination="@id/bookDetailsFragment" />
    </fragment>


    <fragment
        android:id="@+id/bookDetailsFragment"
        android:name="com.example.harrypotter.presentation.BookDetailsFragment"
        tools:layout="@layout/fragment_book_details"
        android:label="BookDetailsFragment" />
</navigation>